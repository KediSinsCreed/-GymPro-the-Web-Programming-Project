<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymProMax</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymProMax.styles.css" asp-append-version="true" />
</head>
<body> 
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">GYMPRO MAX</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Eğitmenler</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-warning text-dark fw-bold" href="#">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white mt-auto py-3">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-warning">GYMPRO MAX</h5>
                    <small>Güç, tutku ve disiplinin adresi.</small>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-warning">İletişim</h5>
                    <small>📍 Kampüs Yolu, Sakarya</small><br>
                    <small>📞 0264 000 00 00</small>
                </div>
                <div class="col-md-4">
                    <h5 class="text-warning">Sosyal Medya</h5>
                    <a href="#" class="text-white me-2" style="text-decoration:none">Instagram</a>
                    <a href="#" class="text-white" style="text-decoration:none">Twitter</a>
                </div>
            </div>
            <hr class="bg-secondary" />
            <span class="text-white-50">&copy; 2025 - GymPro Max - Tüm Hakları Saklıdır.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
